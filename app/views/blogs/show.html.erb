<p style="color: green"><%= notice %></p>


<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"> <%= @blog.title %> </h1>
        <p class="col-md-8 fs-4"><%= @blog.content %></p>
        <button class="btn btn-primary btn-lg" type="button"><%= link_to "Edit this blog", edit_blog_path(@blog) , class:"btn btn-primary" %></button>
        <button class="btn btn-primary btn-lg"><%= link_to "Back to blogs", blogs_path , class:"btn btn-primary" %></button>
      </div>
      <footer><strong><%= @blog.first_name %> <%= @blog.last_name %> </strong>| <strong> @<%= @blog.email%></strong></footer>
</div>

  <%= button_to "Delete this blog", @blog, class:"btn btn-primary", method: :delete %>

